{
  "name": "{{ name }}",
  "description": "{{ description }}",
  "version": "1.0.0",
  "author": "{{ author }}",
  "license": "{{ license }}",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --hot --color --open --config webpack.config.dev.js",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules --config webpack.config.dev.js",
    "pack": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "dist": "npm run build && npm run pack",
    "test": "./node_modules/.bin/jest --coverage"
  },
  "dependencies": {
    "vue": "^2.4.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "compression-webpack-plugin": "^1.0.1",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "es6-promise": "^4.1.1",
    "eslint": "^4.11.0",
    "eslint-plugin-vue": "3.13.0",
    "jest": "^21.2.1",
    "jest-vue": "^0.8.2",
    {{#sass}}
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    {{/sass}}
    "vue-loader": "^13.0.4",
    "vue-template-compiler": "^2.4.4",
    "vue-test-utils": "^1.0.0-beta.5",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4"
  },
  "eslintIgnore": [
    "test/*.js",
    "dist/*.js",
    "node_modules"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:vue/recommended"
    ]
  },
  "jest": {
    "mapCoverage": true,
    "coverageDirectory": "test/coverage",
    "moduleNameMapper": {
      "^vue$": "vue/dist/vue.common.js"
    },
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue"
    }
  }
}
